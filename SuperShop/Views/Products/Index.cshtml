@model IEnumerable<Supershop.Data.Entities.Product>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 font-weight-bold"><i class="fa fa-box"></i> Lista de Produtos</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fa fa-plus"></i> Criar Novo Produto
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fa fa-info-circle fa-3x mb-3"></i>
            <h4>Nenhum produto encontrado</h4>
            <p>Comece adicionando o seu primeiro produto!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card product-card shadow-sm h-100 border-0">
                        <div class="card-img-wrapper" style="height: 250px; overflow: hidden; background-color: #f8f9fa;">
                            @if (!string.IsNullOrEmpty(item.ImageUrl) && (item.ImageUrl.StartsWith("/") || item.ImageUrl.StartsWith("~/")))
                            {
                                <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" 
                                     class="card-img-top" 
                                     style="width: 100%; height: 100%; object-fit: contain; padding: 10px;" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <i class="fa fa-image fa-5x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title font-weight-bold">@item.Name</h5>
                            <p class="card-text">
                                <span class="badge badge-success badge-pill" style="font-size: 1.1rem;">
                                    <i class="fa fa-euro-sign"></i> @item.Price.ToString("F2")
                                </span>
                            </p>
                            <div class="mt-auto">
                                <div class="mb-2">
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge badge-success"><i class="fa fa-check"></i> Disponível</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger"><i class="fa fa-times"></i> Indisponível</span>
                                    }
                                    <span class="badge badge-info ml-1"><i class="fa fa-boxes"></i> Stock: @item.Stock</span>
                                </div>
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
    }

    .card-img-wrapper {
        border-radius: 10px 10px 0 0;
    }
</style>

