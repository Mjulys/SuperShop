@model Supershop.Data.Entities.Product

@{
    ViewData["Title"] = "Eliminar Produto";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fa fa-exclamation-triangle"></i> Eliminar Produto</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading"><i class="fa fa-warning"></i> Atenção!</h4>
                        <p class="mb-0">Tem a certeza que deseja eliminar este produto? Esta ação não pode ser desfeita.</p>
                    </div>

                    <div class="row">
                        <!-- Coluna com a imagem -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="card border-primary">
                                <div class="card-body p-4">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name"
                                             class="img-fluid rounded shadow"
                                             style="max-height: 400px; width: 100%; object-fit: contain;" />
                                    }
                                    else
                                    {
                                        <div class="text-muted p-5">
                                            <i class="fa fa-image fa-5x mb-3"></i>
                                            <p>Sem imagem</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Coluna com os dados -->
                        <div class="col-md-8">
                            <h4 class="font-weight-bold text-danger mb-4">
                                <i class="fa fa-box"></i> @Model.Name
                            </h4>

                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fa fa-euro-sign text-primary"></i> Preço
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge badge-success badge-pill" style="font-size: 1rem;">
                                        €@Model.Price.ToString("F2")
                                    </span>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fa fa-calendar text-primary"></i> Última Compra
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.LastPurchase.HasValue)
                                    {
                                        @Model.LastPurchase.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fa fa-calendar text-primary"></i> Última Venda
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.LastSale.HasValue)
                                    {
                                        @Model.LastSale.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fa fa-check-circle text-primary"></i> Estado
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="badge badge-success badge-pill">
                                            <i class="fa fa-check"></i> Disponível
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger badge-pill">
                                            <i class="fa fa-times"></i> Indisponível
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fa fa-boxes text-primary"></i> Stock
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge badge-info badge-pill" style="font-size: 1rem;">
                                        @Model.Stock unidades
                                    </span>
                                </dd>
                            </dl>

                            <form asp-action="Delete" class="mt-4">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="fa fa-trash"></i> Sim, Eliminar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary btn-lg">
                                    <i class="fa fa-arrow-left"></i> Cancelar
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
